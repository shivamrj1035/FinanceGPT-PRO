# Application Settings
APP_NAME=FinanceGPT-Pro
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database (SQLite for hackathon - zero setup!)
DATABASE_URL=sqlite+aiosqlite:///./data/financegpt.db
# For production later: postgresql+asyncpg://user:password@localhost/financegpt

# Cache (Optional - can skip Redis for hackathon)
USE_REDIS=False
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=hackathon-secret-key-2025
JWT_SECRET_KEY=jwt-hackathon-secret-2025
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash  # Use flash for faster responses in demo!

# MCP Server
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=9000
MCP_WEBSOCKET_PORT=9001

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Encryption
ENCRYPTION_KEY=hackathon-encryption-key-32bytes!

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log